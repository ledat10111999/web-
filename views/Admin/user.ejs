<!DOCTYPE html>
<html>

<head lang="vi">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/admin.css">
    <script src="https://use.fontawesome.com/8b70c06b18.js"></script>
    <script src="/javascripts/jquery-3.4.1.min.js"></script>
    <script src="/javascripts/jquery.confirm.min.js" ></script>
    <link rel="stylesheet" href="/stylesheets/jquery-confirm.min.css">
    <script src="https://use.fontawesome.com/8b70c06b18.js"></script>
     <!-- AngulatJS -->
     <!-- <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.9/angular.min.js"></script> -->
     <script src="/javascripts/angular.min.js"></script>
     <script src="/javascripts/dirPagination.js"></script>
    <title>Quản lý danh sách người dùng</title>
</head>

<body>
    <% include ../header/headerPost %>
    <!-- Sidebar Menu -->
    <div class="container-fluid">
        <div class="row">
            <nav class="col-lg-2 d-none d-lg-block bg-light sidebar">
                <div class="user-info">
                    <a href="/admin" class="clearfix">
                        <div class="user-avatar">
                            <img width="50px" src="/images/boy_1544603222.png" alt="avatar">
                        </div>
                        <div class="user-meta" style="margin-top: 20px">
                            <div class="inner">
                                <div class="user-name">
                                    <%=data.sign.First_name  %> <%=data.sign.Last_name  %>  
                                </div>
                                <div class="user-verify font-weight-bold" style="color: #555; font-size: 0.9rem;">
                                    Admin
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                <ul class="nav nav-sidebar">
                    <li class="nav-item"><a href="/admin/Post" class="nav-link font-weight-bold">Quản lý tin đăng</a></li>
                    <li class="nav-item ml-3"><a href="/admin/user" class="nav-link active font-weight-bold ">Quản lý người dùng</a></li>
                    <li class="nav-item"><a href="/admin/statistical" class="nav-link font-weight-bold"> Quản lý doanh thu</a></li>
                </ul>
            </nav>

            <!-- Thông tin tài khoản -->
            <main ng-app="myapp" role="main" class="ml-sm-auto col-md-10" style="margin-top: 20px" ng-controller="controller1">
                <div
                    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
                    <h1 class="h2">Welcome, Admin</h1>
                </div>
                <div class="row">
                    <div class="col-md-5 ">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                              <span class="input-group-text" id="basic-addon1">Tìm kiếm</span>
                            </div>
                            <input type="text" ng-model="search.Email" class="form-control w-50 "  placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                          </div>
                    </div>
                    <div class="col-md-3 float-right">
                        <div class="form-group">
                            <select id="inputState" ng-model="Sort" class="form-control w-100">
                                <option selected value="">Sort by</option>
                                <option value="Created_at">Ngày tạo</option>
                                <option value="Email"> Email</option>
                            </select>
                        </div>
                    </div>
                </div>
               
                <div class="manager-table">
                    <table class="table  ">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col" class="text-center">ID</th>
                                <th scope="col" class="text-center">Email</th>
                                <th scope="col" class="text-center">Họ</th>
                                <th scope="col" class="text-center">Tên</th>
                                <th scope="col" class="text-center">Số điện thoại</th>
                                <th scope="col" class="text-center">Ngày tạo</th>
                                <th scope="col" class="text-center">Ngày cập nhật</th>
                                <th scope="col" class="text-center"></th>
                            </tr>
                        </thead>
                       
                        <tbody>
                          
                            <tr  dir-paginate='x in data | filter: search |itemsPerPage:10 |  orderBy: Sort'  >
                              <th scope="col"> {{x.ID}}</th>
                              <td scope="col" class="text-left">{{x.Email}} </td>
                              <td scope="col" class="text-center">{{x.First_name}}</td>
                              <td scope="col" class="text-center">{{x.Last_name}}</td>
                              <td scope="col" class="text-center">0{{x.SDT}}</td>
                              <td scope="col" class="text-center">{{x.Created_at}} </td>
                              <td scope="col" class="text-center">{{x.Update_at}}</td>
                              <td> <a href="/admin/posted/{{x.ID}}" class="nav-link">
                                <button type="button" id="post" class="btn btn-outline-success btn-block font-weight-bold">Bài viết đã đăng</button></a></td>
                            </tr>
                      
                        </tbody>
                        
                    </table>
                    <div class="row">
                        <dir-pagination-controls [max-size="6" ] [direction-links="true" ] [boundary-links="true" ]>
                        </dir-pagination-controls>
                    </div>
                </div>
            </main>
        </div>
        
    </div>
    </div>
    <script type="text/javascript">
    var app = angular.module('myapp',['angularUtils.directives.dirPagination']);
    app.controller('controller1',($scope,$http)=>{
        var base_url = location.protocol + '//' + document.domain + ':' + location.port;
        $http.post(base_url +'/admin/listuser').then((result)=>{
            $scope.data = result.data.reverse(); 
        })
        $scope.Sort ="";
    })
    </script>
    <script src="/javascripts/sigout.js"></script>
