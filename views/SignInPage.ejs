<!DOCTYPE html>
<html>

<head lang="vi">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">

    <script src="/javascripts/jquery-3.4.1.min.js" ></script>
    <title>Đăng Nhập</title>
</head>

<body>

    <div class="Navigator">
        <nav class="navbar navbar-expend-sm navbar-light bg-light">
            <div class="container">
                <!-- Logo -->
                <a href="/" class="nav-brand"><img height="120" src="/images/logo2.png" alt="logo"></a>
                <!-- Nav item signin/register -->
                <ul class="nav ml-auto">
                    <li class="nav-item font-weight-bold"><a href="/signin" class="nav-link ">Đăng nhập</a></li>
                    <li class="nav-item font-weight-bold"><a href="/signup" class="nav-link">Đăng kí</a></li>
                </ul>
        </nav>
    </div>
    <div id="login">
        <div class="container">
            <!-- Canh lề -->
            <div id="login-row" class="row justify-content-center align-item-center">
                <div id="login-column" class="col-md-6">
                    <!-- Khung đăng nhập -->
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="signin" method="POST">
                            <div id="signupalert" <%if(!data||!data.error){%> style="display: none;" <% } %>
                                class="alert alert-danger">

                                <p>error:</p>
                                <% if(data && data.error) {%>
                                <span>
                                    <%=data.error %>
                                    <% } %>
                                </span>
                            </div>
                            <!-- thông báo đăng nhập thành công -->
                            <div id="signupsuccess" <%if(!data||!data.q){%> style="display: none;" <% } %>
                                class="alert ">
                                <p>Thông báo:</p>
                                <% if(data && data.q) {%>
                                <span>
                                    <%=data.q%>
                                    <% } %>
                                </span>
                            </div>
                            <h3 class="text-center text-info">Đăng nhập</h3>

                            <!-- Tên đăng nhập -->
                            <div class="form-group">
                                <label for="username" class="text-info">Tên đăng nhập:</label><br>
                                <input type="text" name="username" class="form-control">
                            </div>
                            <!-- Mật khẩu -->
                            <div class="form-group">
                                <label for="password" class="text-info">Mật khẩu:</label><br>
                                <input type="password" name="password" id="password" class="form-control">
                            </div>
                            <!-- Lưu mật khẩu và nút đăng nhập -->
                            <div class="form-group">
                                <label for="rememberme" class="text-info"><span>Hiển thị mật khẩu</span> <span><input
                                            type="checkbox" name="rememberme" id="rememberme"></span></label><br>
                                <div class="text-center">
                                    <input type="submit" name="submit" id="submit" class="btn btn-info btn-md"
                                        value="Đăng nhập">
                                </div>
                            </div>
                            <!-- link đăng ký -->
                            <div id="register-link" class="text-right">
                                <a href="signup" class="text-info">Đăng Ký</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" >
    $(document).ready(function(){
        $('#rememberme').change(function(){
        //    if($('#password').attr('type') == 'text'){
        //     $('#password').attr('type','password')
        //    }else{
        //     $('#password').attr('type','text') 
        //    }  
        ($('#password').attr('type') == 'text') ? $('#password').attr('type','password'):  $('#password').attr('type','text') 
        })
    })
    </script>
</body>

</html>