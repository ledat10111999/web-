<!DOCTYPE html>
<html>

<head lang="vi">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
    <link rel="stylesheet" href="/stylesheets/loginPage.css">
  
    <script src="/javascripts/jquery-3.4.1.min.js" ></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <title>Đăng Nhập</title>
</head>

<body>

    <div class="Navigator">
        <nav class="navbar navbar-expend-sm navbar-light bg-light">
            <div class="container">
                <!-- Logo -->
                <a href="/" class="nav-brand"><img height="120" src="/images/logo2.png" alt="logo"></a>
                <!-- Nav item signin/register -->
                <ul class="nav ml-auto">
                    <li class="nav-item font-weight-bold"><a href="/signin" class="nav-link ">Đăng nhập</a></li>
                    <li class="nav-item font-weight-bold"><a href="/signup" class="nav-link">Đăng kí</a></li>
                </ul>
        </nav>
    </div>
    <div id="login">
        <div class="container">
            <!-- Canh lề -->
            <div id="login-row" class="row justify-content-center align-item-center">
                <div id="login-column" class="col-md-6">
                    <!-- Khung đăng nhập -->
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="signin" method="POST">
                            <div id="signupalert" <%if(!data||!data.error){%> style="display: none;" <% } %>
                                class="alert alert-danger">

                                <p>error:</p>
                                <% if(data && data.error) {%>
                                <span>
                                    <%=data.error %>
                                    <% } %>
                                </span>
                            </div>
                            <!-- thông báo đăng nhập thành công -->
                            <div id="signupsuccess" <%if(!data||!data.q){%> style="display: none;" <% } %>
                                class="alert ">
                                <p>Thông báo:</p>
                                <% if(data && data.q) {%>
                                <span>
                                    <%=data.q%>
                                    <% } %>
                                </span>
                            </div>
                            <h3 class="text-center text-info">Đăng nhập</h3>

                            <!-- Tên đăng nhập -->
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <span class="fa fa-user"></span>
                                        </span>                    
                                    </div>
                                    <input type="text" class="form-control" name="username" placeholder="Username" required="required">				
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fa fa-lock"></i>
                                        </span>                    
                                    </div>
                                    <input type="password" id="password" class="form-control" name="password" placeholder="Password" required="required">				
                                </div>
                            </div>        
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary login-btn btn-block">Đăng nhập</button>
                            </div>
                            <div class="clearfix">
                                <label class="float-left form-check-label"><input type="checkbox" id="rememberme">   Hiện mật khẩu</label>
                                
                            </div>
                            <div class="or-seperator"><i>Hoặc</i></div>
                            <p class="text-center">Đăng nhập với</p>
                            <div class="text-center social-btn">
                                <a href="/auth/fb" class="btn btn-secondary"><i class="fa fa-facebook"></i>&nbsp; Facebook</a>
                             
                                <a href="#" class="btn btn-danger"><i class="fa fa-google"></i>&nbsp; Google</a>
                            </div>
                           
                        </form>
                        <p class="text-center text-muted small">Chưa có tài khoản? <a href="/signup">Đăng ký</a></p>
                    </div>
                </div>
                
            </div>
        </div>
    </div>

 
    <script type="text/javascript" >
    $(document).ready(function(){
        $('#rememberme').change(function(){
        ($('#password').attr('type') == 'text') ? $('#password').attr('type','password'):  $('#password').attr('type','text') 
        })
    })
    </script>
</body>

</html>